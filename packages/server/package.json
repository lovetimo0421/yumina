{
  "name": "@yumina/server",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./dist/index.mjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.mjs",
    "typecheck": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@hono/node-server": "^1",
    "@yumina/shared": "workspace:*",
    "better-auth": "^1",
    "dotenv": "^16",
    "drizzle-orm": "^0.41",
    "hono": "^4",
    "pg": "^8",
    "zod": "^3.24"
  },
  "devDependencies": {
    "@types/node": "^22",
    "@types/pg": "^8",
    "drizzle-kit": "^0.31",
    "tsup": "^8",
    "tsx": "^4",
    "typescript": "^5.7"
  }
}
